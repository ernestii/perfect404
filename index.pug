  body
    // Header
    header
      .container
        .row
          .col-9: .logo
            a(href="/"): img(src="images/logo.svg" alt="Georgian College Logo")
          .col-3: .search
            input(type="text" placeholder="Search...")

    // Navigation
    nav
      .container
        .row
          .col-9
            ul.nav
              li: a(href="#") Academics
              li: a(href="#") Admissions
              li: a(href="#") Finance and fees
              li: a(href="#") Student life
              li: a(href="#") Community
              li: a(href="#") About us
          .col-3
            .login
              a(href="#") Login

    // Section 404
    section.not-found
      .container
        .row
          .col-1
          .col-2: img(src="images/not-found.svg" alt="Page not found")
          .col-7
            h1 Page is not found
            p The page you requested was not found. Try to do the following:
            ol
              li Check you link for typos and errors.
              li If you received this link from the college, contact and ask for another link.
              li Search what you want to find.

    // Search & Broken link
    section.broken-link
      .container
        .row
          .col-3
          .col-6
            form.search(action="" method="get")
              input.form-control(type="text" placeholder="Search...")
            hr
            .row.report
              .col-8
                label Do you think this page should be up?
              .col-4.text-right
                a.btn.btn-secondary(href="#") Report broken link

    // Useful links
    section.useful-links
      .container
        h2 Useful links
        .row
          .col-4
